{

	"compilerOptions": {
		"target": "es2022",
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"checkJs": false,
		"allowJs": true
	},
	"ts-node": {
		"esm": true
	}
}